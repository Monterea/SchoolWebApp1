@model Student
<form asp-action="Edit"> 
    <div class="form-group">
        <label asp-for="FirstName">Jméno:</label>
        <input type="text" asp-for="@Model.FirstName" class="form-control"/>   
    </div>
    <div class="form-group">
        <label asp-for="LastName">Příjmení:</label>
        <input type="text" asp-for="@Model.LastName" class="form-control"/>   
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth">Datum narození:</label>
        <input type="date" asp-for="@Model.DateOfBirth" class="form-control" />
    </div>
    <div>
        <input type="submit" class="btn btn-warning" value="Změnit"/>
    </div>
</form>
