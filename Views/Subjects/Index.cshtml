@model IEnumerable<Subject>
@foreach(var subject in Model) {    
<div class="border border-2 border-secondary">
        <h6>@subject.Name</h6>
        <p>Identifikační číslo: @subject.Id</p>
    
        <a class="btn btn-warning" asp-action="Edit" asp-route-id=@subject.Id>Změnit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id=@subject.Id>Smazat</a>
</div>
}
<div>
    <p></p>
<a class="btn btn-primary" asp-action="Create">Nový předmět</a>
</div>
